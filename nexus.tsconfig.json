{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@gql/*": ["graphql/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"]
    }
  },
  "include": ["./**/*.ts"]
}
